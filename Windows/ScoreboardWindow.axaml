<Window Title="Windows_ScoreboardWindow" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d" x:Class="minesweeper.Windows.ScoreboardWindow" x:DataType="vm:ScoreboardWindow" xmlns="https://github.com/avaloniaui" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:vm="using:minesweeper.Windows" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DataGrid BorderBrush="Gray" BorderThickness="1" GridLinesVisibility="All" IsReadOnly="True" ItemsSource="{Binding PlayerScores}" Margin="20" x:Name="MainDataGrid">
    <DataGrid.Columns>
      <DataGridTextColumn Binding="{Binding Username}" Header="Username" Width="*"></DataGridTextColumn>
      <DataGridTextColumn Binding="{Binding Score}" Header="Score" Width="*"></DataGridTextColumn>
    </DataGrid.Columns>
  </DataGrid>
</Window>
