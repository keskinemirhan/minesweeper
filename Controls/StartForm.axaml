<UserControl
    xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="minesweeper.Controls.StartForm">
    <StackPanel MaxWidth="400" MinWidth="100">

          <TextBlock Margin="20" FontSize="24"> Welcome to Minesweeper!</TextBlock>
          <TextBlock>Username:</TextBlock>
          <TextBox x:Name="UserNameControl" Margin="0,10" Watermark="Enter your name"/>

          <TextBlock>Enter Grid Size:</TextBlock>
          <TextBox x:Name="GridSizeControl" Margin="0,10" Watermark="Grid Size"/>

          <TextBlock>Enter Mine Count:</TextBlock>
          <TextBox x:Name="MineCountControl" Margin="0,10" Watermark="Mine Count"/>

          <TextBlock Margin="0,10" FontWeight="Bold" x:Name="ErrorControl" Foreground="#DD0000"></TextBlock>

          <Button x:Name="SubmitButton" Background="#3cb500">Let's Go!</Button>

    </StackPanel>
</UserControl>
