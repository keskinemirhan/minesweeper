<UserControl x:Class="minesweeper.Controls.StartForm" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel MaxWidth="400" MinWidth="100">
    <TextBlock FontSize="24" Margin="20">Welcome to Minesweeper!</TextBlock>
    <TextBlock>Username:</TextBlock>
    <TextBox Margin="0,10" Watermark="Enter your name" x:Name="UserNameControl"></TextBox>
    <TextBlock>Enter Grid Size:</TextBlock>
    <TextBox Margin="0,10" Watermark="Grid Size" x:Name="GridSizeControl"></TextBox>
    <TextBlock>Enter Mine Count:</TextBlock>
    <TextBox Margin="0,10" Watermark="Mine Count" x:Name="MineCountControl"></TextBox>
    <TextBlock FontWeight="Bold" Foreground="#DD0000" Margin="0,10" x:Name="ErrorControl"></TextBlock>
    <Button Background="#3cb500" x:Name="SubmitButton">Let's Go!</Button>
  </StackPanel>
</UserControl>
