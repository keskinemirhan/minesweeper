<UserControl x:Class="minesweeper.Controls.FieldControl" xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel>
    <TextBlock DockPanel.Dock="Top" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" IsVisible="true" Margin="10" x:Name="TimeIndicator">Time: 0</TextBlock>
    <TextBlock DockPanel.Dock="Top" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" IsVisible="true" Margin="10" x:Name="MoveIndicator">Moves: 0</TextBlock>
    <TextBlock DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" IsVisible="false" Margin="10" x:Name="GameOverIndicator"></TextBlock>
    <Button DockPanel.Dock="Top" HorizontalAlignment="Center" IsVisible="false" Margin="0,5" x:Name="MenuButton">Go To Menu</Button>
    <Button DockPanel.Dock="Top" HorizontalAlignment="Center" IsVisible="false" Margin="0,5" x:Name="ScoreboardButton">See Scoreboard</Button>
    <Button DockPanel.Dock="Top" HorizontalAlignment="Center" IsVisible="false" x:Name="RetryButton">Retry</Button>
    <Viewbox DockPanel.Dock="Top">
      <Grid Margin="10" x:Name="MainGrid"></Grid>
    </Viewbox>
  </DockPanel>
</UserControl>
